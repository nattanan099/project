<%- include ("../../views/_header") %>
    <div class="container mt-5">
        <div class="row" style="width: 800px;">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/save" method="post">
                            <center>
                                <h1 style="color: #5a5a5a;">ลงทะเบียนผู้ดูแล</h1>
                            </center>
                            <br>
                            <h5>
                                <div class="form-group" >
                                    ชื่อผู้ใช้:  <font color="red"> * </font> <br> 
                                    <input type="text" name="username"
                                        placeholder="ชื่อผู้ใช้" id = "re1" class="form-control" required>
                                    </div>
                                    <div class="form-group" >
                                        รหัสผ่าน<font color="red"> * </font>
                                        <input type="password" name="password"
                                        placeholder="รหัสผ่าน" id = "re1" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    ชื่อ:  <font color="red"> * </font>  <br> 
                                    <input type="firstname" name="firstname"placeholder="ชื่อ" id = "re1" class="form-control" required>
                                </div>
                                <div class="form-group" >
                                    นามสกุล :  <font color="red"> * </font>
                                    <input type="lastname" name="lastname"placeholder="นามสกุล" id = "re1" class="form-control" required>
                                </div>
                                
                                <div class="form-group">
                                    
                                  </div>
                            </h5>
                            <br>
                            <a href="/admin" class="btn btn-info w3-left" align="right"> กลับ </a>
                            <button type="submit" class="btn btn-success w3-right" id="yes"> ยืนยัน </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        div{
            color: #5a5a5a;
        }
     
    </style>
    <script>
          
  document.addEventListener("DOMContentLoaded", function() {
    var elements = document.getElementsByTagName("INPUT");
    for (var i = 0; i < elements.length; i++) {
        elements[i].oninvalid = function(e) {
            e.target.setCustomValidity("");
            if (!e.target.validity.valid) {
                e.target.setCustomValidity("กรุณากรอกช่องนี้");
            }
        };
        elements[i].oninput = function(e) {
            e.target.setCustomValidity("");
        };
    }
})
    
    </script>



