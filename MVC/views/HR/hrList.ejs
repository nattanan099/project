<%- include ("../../views/_headerhr") %>
<br>
    <h1 align="center"> รายชื่อพนักงานบริษัท </h1>
    <div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:5px">
        <div class="w3-row-padding w3-padding-16 w3-center">                                  
            <div class="w3-rest  w3-container">
                <div style="overflow-x:auto;" align="center">
                <table class="table table-bordered table-hover">


                    <thead align="center">


                        <tr class="table-active ">

                            <th>ลำดับ</th>
                            <th>ชื่อ</th>
                            <th>ชื่อเล่น</th>
                            <th>ผ่าย</th>
                            <th>แผนก</th>
                            <th>ตัวเลือก</th>
                            
                        </tr>
                    </thead>

                    <tbody align="center">
                        <% if(data){ %>
                            <% for(var i=0 ; i < data.length;i++){ %>
                                <tr>
                                    <td>
                                        <%= (i+1) %>
                                    </td>
                                    <td align="left" >
                                        <%= data[i].sex %> <%= data[i].firstname %>
                                            <%= data[i].lastname %>
                                    </td>
                                    <td>
                                        <%= data[i].nickname %>
                                    </td>
                                    <td>
                                        <%=data[i].department%>
                                    </td>
                                    <td>
                                        <%=data[i].subdepartment%>
                                    </td>
                                    <td>
                                        <a href="/hr/<%= data[i].emid %>" class="btn btn-success" style="width: 95px;"> กรอกข้อมูล</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    </div>
    <style>
        #h1id {
            position: relative;
            margin-left: 40%;
        }

        #aid {
            position: relative;
            font-size: 18px;
            margin-left: 67.7%;
        }
        th{
           color:#5a5a5a;
        }
        tr{
           color:#5a5a5a;
        }
    </style>


