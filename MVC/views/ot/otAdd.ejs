<%if(session.admin){%>
    <%- include ("../../views/_headeradmin") %>
    <%}else if (session.hr){%>
    <%- include ("../../views/_headerhr") %>
    <%}else if (session.employee){%>
    <%- include ("../../views/_headereemployee") %>
    <%}else if (session.leader){%>
    <%- include ("../../views/_headerleader") %>
    <%}else if (session.leaderinstall || session.leaderma || session.leaderinstallandma){%>
    <%- include ("../../views/_headerleader2") %>
    <%}%>
    <form action="/ot/save" method="post">
        <div class="w3-main w3-content w3-padding" style="max-width:800px;margin-top:5px" id="form1">
            <div class="w3-row-padding w3-padding-16">     
                      <div class="card">
                          <div class="card-body">
                              <center>
                                  <h3 style="font-weight: bold;">แบบฟอร์มขออนุมติการทำงานล่วงเวลา 
                                  </h3>
                                  <h3 style="font-weight: bold;">(Over Time Requisition Form)</h3>                          
                                  <h3 style="font-weight: bold;">ประจำเดือน <input type="month" name="month">
                              </center><br>
                              <div class="form-group">
                                  <h5>เวลาพัก<font color="red">*</font></h5>                      
                                  <input type="radio" name="break_time" id = "checkmark1" style="width: 15px;"   class="w3-check" value="02:00:00"  required> <font id = "f1">02:00 ชม.</font>
                                  <input type="radio" name="break_time" id = "checkmark2" style="width: 15px;"  class="w3-check" value="01:00:00"  required> <font id = "f2">01:00 ชม.</font>
                              </div>
                              <div  class="form-group">
                                  <h5>วันที่ OT: <font color="red">*</font></h5>
                                  <input type="date" name="dateot" class="form-control" required> </input>
                              </div>
                              <div  class="form-group">
                                  <h5>จากเวลา (เริ่มทำ OT):<font color="red">*</font></h5>
                                  <input type="datetime-local" name="datestart" class="form-control" required> </input>
                              </div>
                              <div  class="form-group">
                                  <h5>ถึงเวลา (สิ้นสุด OT):<font color="red">*</font></h5>
                                  <input type="datetime-local" name="dateend" class="form-control" required> </input>
                              </div>
                              <div  class="form-group">
                                  <h5>รายละเอียดของงานที่ทำนอกเวลา:<font color="red">*</font></h5>
                                  <textarea type="textarea" name="detail" class="form-control"  rows="4" cols="50" required> </textarea>
                              </div>
                              
                              <input type="text" name="employee_id" value="<%=session.employeeid%>" hidden> </input>
                              <input type="text" name="status" value="0"  hidden> </input>
                              <input type="text" name="statusot" value="0"  hidden> </input>                      
                              <a href="/homeot" class="btn btn-info w3-left" > กลับ </a>
                              <button type="submit" class="btn btn-success w3-right" id="yes" align="right"> ยืนยัน </button>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
<style>
    div{
        color:#5a5a5a;
    }
</style>
<script>          
    document.addEventListener("DOMContentLoaded", function() {
      var elements = document.getElementsByTagName("INPUT");
      for (var i = 0; i < elements.length; i++) {
          elements[i].oninvalid = function(e) {
              e.target.setCustomValidity("");
              if (!e.target.validity.valid) {
                  e.target.setCustomValidity("กรุณากรอกช่องนี้");
              }
          };
          elements[i].oninput = function(e) {
              e.target.setCustomValidity("");
          };
      }
  })    
      </script>

