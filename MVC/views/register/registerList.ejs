<%- include ("../../views/_headeradmin") %>
<div class="w3-main w3-content w3-padding" style="max-width:900px;margin-top:5px">
    <div class="w3-row-padding w3-padding-16 w3-center">
        <div class="w3-rest  w3-container">
    <h1 id="h1id"> รายชื่อพนักงาน </h1>
    <a href="register/add" class="btn btn-success w3-right" id="aid" > เพิ่มผู้ใช้งาน </a><br><br>

    <div style="overflow-x:auto;" align="center">
                <table class="table table-bordered table-hover">
                    <thead align="center">
                        <tr class="table-active ">
                            <th>ลำดับ</th>
                            <th>ชื่อ</th>
                            <th>ตัวเลือก</th>

                        </tr>
                    </thead>

                    <tbody align="center">
                        <% if(data){ %>
                            <% for(var i=0 ; i < data.length;i++){ %>
                                <tr>
                                    <td>
                                        <%= (i+1) %>
                                    </td>
                                    <td align="left">
                                        <%= data[i].sex %> <%= data[i].firstname %>
                                            <%= data[i].lastname %>
                                    </td>
                                    <td>
                                        <a href="/register/detail/<%= data[i].emid %>" class="btn btn-warning"> รายระเอียด</a>
                                        <a href="/register/edit/<%= data[i].emid %>" class="btn btn-info"> แก้ไข</a>
                                        <a href="/register/del/<%= data[i].emid %>" class="btn btn-danger"> ลบ</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    </div>
    <style>
        th{
            color: #5a5a5a;
        }
        td{
            color:#5a5a5a;
        }
    </style>

    <%- include ("../../views/_footer") %>